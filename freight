

installyuma() {
    git clone --depth 1 "https://github.com/Focus172/yuma.git" "~/.local/share/yuma"
}

case "$1" in
    "init") 
        cargo init
        echo "yuma = { path = "~/.local/share/yuma" }" >> Cargo.toml
    ;;
    "install")
        installyuma
    ;;
    "add")
        echo "todo!: add the thing to the file and rebuild"
    ;;
    *) 
        echo "Unknown Option: { $1 }"
    ;;
esac
